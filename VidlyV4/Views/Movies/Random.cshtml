@model VidlyV4.ViewModel.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
}

<h2>Movies</h2>

@{ 
    var className = Model.Customers.Count > 0 ? "popular" : null;
}
<h2 class="@className">
    @Model.Movie.Name
</h2>
@if (Model.Customers.Count == 0)
{
    <text>No One have Rented this movie before </text>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}